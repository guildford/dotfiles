#trun off the startup message
startup_message off
term linux

defscrollback 40960
hardstatus alwayslastline

#terminal name
shelltitle "$|static"

#shutdown the noise
vbell on

bind w windowlist -b
bind ^w windowlist -b

#initial apps to run
screen
screen
select 0

escape ^aa

attrcolor u "-u B"
autodetach on

